<!DOCTYPE html>
<html>
  <head>
    <title>MapMyWalk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script type="text/javascript">
      window.ash_yo = "<%= image_url('ash_yo_front_page.PNG') %>";
      window.mmw_logo_text = "<%= image_url('mmwlogo-text.png') %>";
      window.routesidebar = '<%= image_url('route-side-bar-placeholder.png') %>';
      window.cy_profile_pic = '<%= image_url('cy-profile-pic.jpg') %>';
      window.walking = '<%= image_url('walking-man.PNG') %>';
      window.splash_example_1 = '<%= image_url('splash-example-1.png') %>';
      window.splash_example_2 = '<%= image_url('splash-example-2.png') %>';
      window.logo = '<%= image_url('mmwlogo.png') %>';
      window.splash_wonky = '<%= image_url('splash-wonky.png') %>';
      window.logo_marker = '<%= image_url('logo-marker.png')%>';
      window.googleAPIKey = "<%= Rails.application.credentials.google[:api_key] %>";
    </script>

    <meta property="og:title" content="Map My Walk" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://github.com/dojobuns/MapMyWalk" />
    <meta property="og:image" content="https://github.com/dojobuns/MapMyWalk/blob/master/app/assets/images/linkedingstuff.png" />

    <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?key=#{Rails.application.credentials.google[:api_key]}" %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link href="https://fonts.googleapis.com/css2?family=Lexend+Tera&family=Roboto+Mono:wght@700&family=Source+Code+Pro:wght@900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">

    <% if current_user %>
      <script>
        window.currentUser = <%= render('/api/users/current_user.json.jbuilder', user: current_user).html_safe %>
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
