<!DOCTYPE html>
<html>
  <head>
    <title>MapMyWalk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script type="text/javascript">
      window.ash_yo = "<%= image_url('ash_yo_front_page.PNG') %>";
      window.mmrlogo = "<%= image_url('mmrlogo.png') %>";
      window.routesidebar = '<%= image_url('route-side-bar-placeholder.png') %>';
      window.mapplaceholder = '<%= image_url('map-placeholder.png') %>';
    </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <link href="https://fonts.googleapis.com/css2?family=Teko:wght@700&display=swap" rel="stylesheet">

    <% if current_user %>
      <script>
        window.currentUser = {
          'id': <%= current_user.id %>,
          'email': '<%= current_user.email %>'
        }; 
      </script>
    <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
